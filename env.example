# Twitter API Credentials
X_API_KEY=
X_API_SECRET=
X_ACCESS_TOKEN=
X_ACCESS_SECRET=

# Bot Configuration
POSTS_PER_RUN=1
BOT_RUN_INTERVAL_MINUTES=360  # Run every 6 hours (360 minutes)

# Safety Settings
TEST_MODE=false              # Set to true to run without posting tweets
DAILY_POST_LIMIT=5           # Maximum tweets per day (default: 5)
ENABLE_DUPLICATE_CHECK=true  # Prevent posting duplicate content

# AI Provider (optional - leave unset for heuristic approach)
# Options: openai, ollama, or leave unset for default heuristic
AI_PROVIDER=

# OpenAI Configuration (if AI_PROVIDER=openai)
OPENAI_API_KEY=

# Ollama Configuration (if AI_PROVIDER=ollama)
OLLAMA_HOST=http://localhost:11434

# Content Settings
# Minimum article text length before using fallback (default: 400)
MIN_ARTICLE_LENGTH=400

# Jitter Settings
# Random delay between posts in seconds (default: 0-30)
JITTER_MIN=0
JITTER_MAX=30

# Hashtag Settings
# Chance of no hashtags (0.0-1.0, default: 0.3 = 30%)
HASHTAG_NONE_CHANCE=0.3

# Persona Settings
# Enable emojis (true/false, default: false)
ENABLE_EMOJIS=false
# Emoji usage chance (0.0-1.0, default: 0.12 = 12%)
EMOJI_CHANCE=0.12
# Enable closers (true/false, default: true)
ENABLE_CLOSERS=true
# Closer usage chance (0.0-1.0, default: 0.3 = 30%)
CLOSER_CHANCE=0.3

# RSS Feed Settings
# Timeout for RSS fetching in milliseconds (default: 10000)
RSS_TIMEOUT=10000
# Timeout for article extraction in milliseconds (default: 15000)
EXTRACTION_TIMEOUT=15000
# Maximum retries for article extraction (default: 2)
EXTRACTION_MAX_RETRIES=2

# Tweet Settings
# Maximum tweet length including URL (default: 280)
MAX_TWEET_LENGTH=280
# Reserved space for URL in characters (default: 30)
URL_RESERVED_SPACE=30